<div class="container-fluid mt-2">
    <div class="card">
        <div class="card-body">
            <h3 id="post-title" class="card-title">{{post.pst_title}} </h5>
            <h6 class="card-subtitle mb-2 text-muted text-decoration-none">Posted by {{post.user.usr_name}} on {{format_date post.created_at}}</h6>
            <p id="post-body" class="card-text">{{post.pst_content}}</p>
        </div>
    </div>
</div>
{{!-- Add Comment --}}
<div class="container-fluid mt-4 mr-2">
    <form id="comment-form">
        <h3 for="comment-text">Leave A Comment</h3>
        <textarea class="form-control" type="text" id="comment-text" rows="4"></textarea>
        <button class="mt-3 btn btn-info" id="btn-post-comment">Post!</button>
    </form>
</div>
<div class="container-fluid">
    <ul class="list-group">    
        {{#each post.comments as |oneComment|}}
        <li class="list-group-item">
            {{> comment oneComment }}
        </li>
        {{/each}}
    </ul>
</div>

<script src="/js/comment.js"></script>
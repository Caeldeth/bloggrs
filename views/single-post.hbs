<div class="card">
    <h1 id="post-title" class="post-header">{{post.pst_title}} </h1>
    <h4>Posted by {{post.user.usr_name}} on {{created_at}}</h4>
    <div class="container">
        <p id="post-body" class="post-text post-text-padding">{{post.pst_content}}</p>
    </div>
    {{!-- If this is my post i can edit and delete it --}}
    {{#if currentUser}}
    <button id="edit-btn">Edit</button>
    <button id="delete-btn">Delete</button>
    {{/if}}
</div>
{{!-- Add Comment --}}
<div class="padding-20">
    <form id="comment-form">
        <label for="comment-text">Leave A Comment</label>
        <textarea class="textarea" type="text" id="comment-text"></textarea>
        <button class="padding-20" id="btn-post-comment">Post!</button>
    </form>
</div>
<div class=container>
{{!-- Handle the comments --}}
    {{#each post.comments as |oneComment|}}
    <li>
        {{> comment oneComment }}
    </li>
    {{/each}}
</div>

<script src="/js/comment.js"></script>